citation_expert <- citHeader("To cite expertsurv in publications use:")
citEntry(entry = "Article",
         title        = "Direct Incorporation of Expert Opinion into Parametric Survival Models to Inform Survival Extrapolation",
         author       = "Philip Cooney and Arthur White",
         journal      = "Medical Decision Making",
         year         = "2023",
         pages        = "1--12",
         url          = "https://journals.sagepub.com/doi/epub/10.1177/0272989X221150212",
         
         textVersion  =
           paste("Philp Cooney, Arthur White (2022).",
                 "Direct Incorporation of Expert Opinion into Parametric Survival Models to Inform Survival Extrapolation",
                 "Medical Decision Making, 1-12.",
                 "URL https://journals.sagepub.com/doi/epub/10.1177/0272989X221150212.")
)
